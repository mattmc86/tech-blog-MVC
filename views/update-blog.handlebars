<div class="edit-blog-container">
  <section class="edit-blog-header">
    <div class="edit-blog-title">Update Blog</div>
  </section>
  <section class="edit-blog-body">
    <form>
         <div class="field">
      <div class="control">
      <input type = 'text' class="input edit-blog-title" id="edit-blog-title" type="text" value="{{this.blog_title}}" placeholder="Blog Title">
     </div>
    </div>
      <div class = 'field'>  
         <div class="control">
          <textarea type='text'class="textarea edit-blog-content" id="edit-blog-content" placeholder="Whats on your mind?">{{this.blog_content}}</textarea>
      </div>
</div>
      <button class="update-btn" type="submit">Update</button>
      <button class="delete-btn" type="submit">Delete</button>
    </form>
  </section>
</div>

<script src="/js/delete-blog.js"></script>
<script src="/js/update-blog.js"></script>